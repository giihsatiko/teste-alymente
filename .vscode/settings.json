{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always", // runs all code actions (ESLint, Prettier, etc.)
    "source.organizeImports": "always", // optional
    "source.sortMembers": "always", // optional
    "source.fixAll.eslint": "always" // run ESLint fixes on save
  }
}
